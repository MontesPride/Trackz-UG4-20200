<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/track_settings">

        <ListPreference
            app:defaultValue="3"
            app:entries="@array/track_size_names"
            app:entryValues="@array/track_size_values"
            app:key="size"
            app:title="@string/track_size"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="show_track_string"
            app:summary="@string/show_track_string_details"
            app:title="@string/show_track_string" />

        <SwitchPreferenceCompat
            app:key="show_track_score"
            app:title="@string/show_track_score" />

    </PreferenceCategory>

</PreferenceScreen>
